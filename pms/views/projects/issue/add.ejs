<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Project Overview</title>

  <!-- Bootstrap core CSS -->
  <link href="/vendor/bootstrap/css2/bootstrap.min.css" rel="stylesheet">

  <!-- Custom styles for this template -->
  <link href="/stylesheets/simple-sidebar.css" rel="stylesheet">

</head>

<body>

  <div class="d-flex" id="wrapper">

    <!-- Sidebar -->
    <div class="bg-light border-right" id="sidebar-wrapper">
      <div class="sidebar-heading">Project Management Tools </div>
      <div class="list-group list-group-flush">
        <a href="/projects/overview/<%= idProject %>" class="list-group-item list-group-item-action bg-light">Overview</a>
        <a href="/projects/activity/<%= idProject %>" class="list-group-item list-group-item-action bg-light">Activity</a>
        <a href="/projects/member/<%= idProject %>" class="list-group-item list-group-item-action bg-light">Members</a>
        <a href="/projects/issue/<%= idProject %>" class="list-group-item list-group-item-action bg-light">Issue</a>
      </div>
    </div>
    <!-- /#sidebar-wrapper -->

    <!-- Page Content -->
    <div id="page-content-wrapper">

      <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
            <li class="nav-item active">
              <a class="nav-link" href="/projects">Projects <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/profile">Profile</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/users">Users</a>
            </li>
            <li class="nav-item">
              <a href="/signout"><button class="btn btn-primary">Sign Out</button></a>
            </li>
          </ul>
        </div>
      </nav>

      <div class="container-fluid">
        <!-- CONTENTS START HERE -->
        <h1 style="text-align:left;">New Issue</h1>
        <form method="post" action="/projects/issue/<%= idProject %>/add/" enctype="multipart/form-data">
          <table>
            <tr>
              <td width="200" style="align:left;">
                <label for="tracker">Tracker</label>
              </td>
              <td width="800">
                <br><input type="radio" name="tracker" value="bug" checked> Bug<br>
                <input type="radio" name="tracker" value="feature"> Feature<br>
                <input type="radio" name="tracker" value="support"> Support<br><br>
              </td>
            </tr>
            <tr>
              <td width="200">
                <label for="subject">Subject</label>
              </td>
              <td width="800">
                <input type="text" name="subject" placeholder="Subject" required>
              </td>
            </tr>
            <tr>
              <td width="200">
                <label for="description">Description</label>
              </td>
              <td width="800">
                <textarea name="description" cols="50" rows="3" placeholder="Description" required></textarea>
              </td>
            </tr>
            <tr>
              <td width="200">
                <label for="status">Status</label>
              </td>
              <td width="800">
                <br><input type="radio" name="status" value="new" checked> New<br>
                <input type="radio" name="status" value="in_progress"> In Progress<br>
                <input type="radio" name="status" value="resolved"> Resolved<br>
                <input type="radio" name="status" value="feedback"> Feedback<br>
                <input type="radio" name="status" value="closed"> Closed<br>
                <input type="radio" name="status" value="rejected"> Rejected<br><br>
              </td>
            </tr>
            <tr>
              <td width="200">
                <label for="priority">Priority</label>
              </td>
              <td width="800">
                <input type="radio" name="priority" value="normal" checked> Normal<br>
                <input type="radio" name="priority" value="high"> High<br>
                <input type="radio" name="priority" value="urgent"> Urgent<br>
                <input type="radio" name="priority" value="immediate"> Immediate<br><br>
              </td>
            </tr>
            <tr>
              <td width="200">
                <label for="assignee">Assignee</label>
              </td>
              <td width="800">
                <select id="assignee" name="assignee">
                  <% for (let i=0;i<usersData.length;i++) { %>
                    <option value="<%= usersData[i].userid %>"><%= usersData[i].fullname %></option>
                  <% } %>
                </select>
              </td>
            </tr>
            <tr>
              <td width="200">
                <label for="start_date">Start Date</label>
              </td>
              <td width="800">
                <input type="date" name="start_date">
              </td>
            </tr>
            <tr>
              <td width="200">
                <label for="due_date">Due Date</label>
              </td>
              <td width="800">
                <input type="date" name="due_date">
              </td>
            </tr>
            <tr>
              <td width="200">
                <label for="estimated_time">Estimated Time</label>
              </td>
              <td width="800">
                <input type="number" name="estimated_time" placeholder="Estimated Time" step="0.01">
              </td>
            </tr>
            <tr>
              <td width="200">
                <label for="done">% Done</label>
              </td>
              <td width="800">
                <select id="done" name="done">
                  <option value="0">0</option>
                  <option value="20">20</option>
                  <option value="40">40</option>
                  <option value="60">60</option>
                  <option value="80">80</option>
                  <option value="100">100</option>
                </select>
              </td>
            </tr>
            <tr>
              <td width="200">
                <label for="files">Files</label>
              </td>
              <td width="800">
                <input type="file" name="files">
              </td>
            </tr>
            <tr>
              <td width="200">
                <button type="submit" class="btn btn-primary">Save</button>
              </td>
            </tr>
          </table>
        </form>

      </div>
    </div>
    <!-- /#page-content-wrapper -->

  </div>
  <!-- /#wrapper -->

  <!-- Bootstrap core JavaScript -->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js2/bootstrap.bundle.min.js"></script>

  <!-- Menu Toggle Script -->
  <script>
    $("#menu-toggle").click(function(e) {
      e.preventDefault();
      $("#wrapper").toggleClass("toggled");
    });
  </script>

</body>

</html>
