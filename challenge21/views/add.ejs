<!DOCTYPE HTML>
<HTML>
  <HEAD>
    <TITLE>ADD FEATURE BREAD CHALLENGE</TITLE>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  </HEAD>
  <BODY>
    <div class="container">
      <H1>BREAD (Browse, Read, Edit, Add, Delete)</H1>
      <H2>Filters</H2>
      <FORM method="post" action="/add" cellpadding="100">
        <table style="width:100%;" border="0">
          <tr>
            <div class = "form-group">
              <td>String</td>
              <td><input type="text" name="String" class="form-control" placeholder="String"></td>
            </div>
          </tr>
          <tr>
            <div class = "form-group">
              <td>Integer</td>
              <td><input type="text" name="Integer" class="form-control" placeholder="Integer"></td>
            </div>
          </tr>
          <tr>
            <div class = "form-group">
              <td>Float</td>
              <td><input type="text" name="Float" class="form-control" placeholder="Float"></td>
            </div>
          </tr>
          <tr>
            <div class = "form-group">
              <td>Date</td>
              <td><input type="date" name="Date" class="form-control" placeholder="Date"></td>
            </div>
          </tr>
          <tr>
            <div class="form-group">
              <td>Boolean</td>
              <td>
                <select name="Boolean" class="form-control">
                  <option value="" disabled selected>Choose the boolean ....</option>
                  <option value="True">True</option>
                  <option value="False">False</option>
                </select>
              </td>
            </div>
          </tr>
          <tr>
            <td><button type="submit" value="Save" class="btn btn-warning">Save</button></td>
            <td></td>
          </tr>
        </table>
      </FORM>
    </div>
    <BODY>
    </HTML>
